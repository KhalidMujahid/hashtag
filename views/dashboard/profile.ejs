<body>
    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top" data-scrollto-offset="0">
        <div class="container-fluid d-flex align-items-center justify-content-between">
            <a href="/" class="logo d-flex align-items-center scrollto me-auto me-lg-0">
                <h1>Hashtag<span>.</span></h1>
            </a>

            <nav id="navbar" class="navbar">
                <ul>
                    <li class="dropdown">
                        <a href="/"><span>Home</span></a>
                    </li>
                    <li><a class="nav-link scrollto" href="/portfolio">Portfolio</a></li>
                    <li><a class="nav-link scrollto" href="/profile">Profile</a></li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle d-none"></i>
            </nav>
            <!-- .navbar -->

            <a class="btn-getstarted scrollto" href="/logout">Logout</a>
        </div>
    </header>
    <div class="my-5 container">
        <div class="row row-cols-1 row-cols-sm-2">
            <div class="col p-5 my-5 rounded">
                <h5 class="text-uppercase">Profile picture</h5>
                <img class="w-100" src="assets/img/team/team-2.jpg" alt="">
                <button style="background-color: rgba(59, 81, 167, 0.81); border: none;"
                    class="my-4 btn text-white p-3">Upload profile</button>
            </div>
            <div class="col my-5 p-5 rounded">
                <h5 class="text-uppercase">Profile details</h5>
                <form action="/profile-upload" class="d-flex flex-column gap-4" method="post">
                    <div class="form-group">
                        <input value="id" type="hidden">
                    </div>
                    <div class="form-group">
                        <input type="text" value="" name="fname" class="form-control" placeholder="First name">
                    </div>
                    <div class="form-group">
                        <input type="text" value="" name="lname" class="form-control" placeholder="Last name">
                    </div>
                    <div class="form-group">
                        <input type="tel" value="" name="whatsapp_number" class="form-control"
                            placeholder="WhatsApp number">
                    </div>
                    <div class="form-group">
                        <input type="text" value="Web Developer" name="skills" class="form-control" readonly>
                    </div>
                    <div class="form-group">
                        <input type="email" value="" name="email" class="form-control" placeholder="Email address">
                    </div>
                    <div class="form-group">
                        <input type="text" value="" name="twitter" class="form-control" placeholder="Twitter URL">
                    </div>
                    <div class="form-group">
                        <input type="text" value="" name="facebook" class="form-control" placeholder="Facebook URL">
                    </div>
                    <div class="form-group">
                        <button style="background-color: rgba(59, 81, 167, 0.81); border: none;"
                            class="my-4 btn text-white p-3">Update profile</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include("../footer.ejs") %>
</body>

</html>