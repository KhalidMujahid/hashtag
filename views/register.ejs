<%# Import Head %>
    <%- include("header.ejs") %>

        <body>
            <%- include("navbar.ejs") %>

                <section id="hero-animated" class="hero-animated d-flex align-items-center">
                    <div class="container d-flex flex-column justify-content-center align-items-center text-center position-relative"
                        data-aos="zoom-out">
                        <h2>Join <span>Hashtag</span> Today</h2>
                        <p>Et voluptate esse accusantium accusamus natus reiciendis quidem voluptates similique aut.</p>
                    </div>
                </section>

                <main id="main" class="my-5 container">
                    <form action="/register" method="post" class="p-3 rounded">

                        <% if(message) {%>
                            <h1 class="lead text-danger">
                                <%= message %>
                            </h1>
                            <%}%>
                                <% if(success) {%>
                                    <h1 class="lead text-success">
                                        <%= success %>
                                    </h1>
                                    <%}%>
                                        <div class="form-group my-4">
                                            <div class="form-floating">
                                                <input type="text" class="form-control" name="fname"
                                                    placeholder="Enter your first name">
                                                <label for="fname">Enter your first name</label>
                                            </div>
                                        </div>
                                        <div class="form-group my-4">
                                            <div class="form-floating">
                                                <input type="text" class="form-control" name="lname"
                                                    placeholder="Enter your last name" required>
                                                <label for="lname">Enter your last name</label>
                                            </div>
                                        </div>
                                        <div class="form-group my-4">
                                            <div class="form-floating">
                                                <input type="tel" class="form-control" name="whatsapp_number"
                                                    placeholder="Enter your WhatsApp number" required>
                                                <label for="whatsapp_number">Enter your WhatsApp number</label>
                                            </div>
                                        </div>
                                        <div class="form-group my-4">
                                            <div class="form-floating">
                                                <input type="email" class="form-control" name="email"
                                                    placeholder="Enter your Email" required>
                                                <label for="email">Enter your Email</label>
                                            </div>
                                        </div>
                                        <div class="form-group my-4">
                                            <label for="skill">Select Skill:</label>
                                            <select name="skills" class="form-select">
                                                <option value="front end developer">Front End Developer</option>
                                                <option value="back end developer">Back End Developer</option>
                                                <option value="Software developer">Software Developer</option>
                                                <option value="front end developer">Graphic Designer</option>
                                            </select>
                                        </div>
                                        <div class="form-group my-4">
                                            <div class="form-floating">
                                                <input type="text" class="form-control" name="password"
                                                    placeholder="Enter your password">
                                                <label for="fname">Enter your password</label>
                                            </div>
                                        </div>
                                        <div class="form-group my-4">
                                            <button type="submit"
                                                style="background-color: rgba(59, 81, 167, 0.81); border: none;"
                                                class="w-100 p-3 text-white">Sign
                                                up</button>
                                        </div>
                                        <div class="form-group my-4 text-center">
                                            <a href="/login">Already have an account?</a>
                                        </div>
                    </form>
                </main>

                <%# Import Footer %>
                    <%- include("footer.ejs") %>

        </body>